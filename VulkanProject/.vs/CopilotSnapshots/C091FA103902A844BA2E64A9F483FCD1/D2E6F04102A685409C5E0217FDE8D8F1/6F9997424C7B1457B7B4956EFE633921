#version 450

layout(location = 0) in vec3 fragColor;
layout(location = 1) in vec2 fragTexCoord;
layout(location = 2) in float fragMatId;

layout(set = 0, binding = 1) uniform sampler2D texSampler;
layout(set = 0, binding = 2) uniform sampler2D texSampler2;

layout(location = 0) out vec4 outColor;

void main() {
    vec4 c1 = texture(texSampler, fragTexCoord);
    vec4 c2 = texture(texSampler2, fragTexCoord);
    // choose texture by material id (0 -> texSampler, 1 -> texSampler2)
    if (int(fragMatId + 0.5) == 1) {
        outColor = c2 * vec4(fragColor, 1.0);
    } else {
        outColor = c1 * vec4(fragColor, 1.0);
    }
}